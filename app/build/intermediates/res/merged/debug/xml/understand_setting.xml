<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" > 
    <ListPreference
        android:key="understander_language_preference"
        android:title="Language settings"
        android:entries="@array/language_entries"
        android:entryValues="@array/language_values"
        android:summary="Support: Mandarin, Cantonese, English"
        android:defaultValue="mandarin"  />
    <EditTextPreference
        android:key="understander_vadbos_preference"   
		android:title="Front end-point time exceed"
		android:dialogTitle="Please input time (0-10000)ms"
        android:summary="Default: SMS transcription 5000, others 4000"
		android:defaultValue="4000" />
    
    <EditTextPreference
        android:key="understander_vadeos_preference"   
		android:title="Back end-point time exceed"
		android:dialogTitle="Please input time (0-10000)ms"
        android:summary="Default: SMS transcription 1800, others 700"
		android:defaultValue="700" />
    
    <ListPreference
        android:key="understander_punc_preference"
        android:title="Punctuations"
        android:entries="@array/punc_entries"
        android:entryValues="@array/punc_values"
        android:summary="Default: have punctuations"
        android:defaultValue="1"  />
    
