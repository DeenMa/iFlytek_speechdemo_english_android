<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" > 
    
    <ListPreference
        android:key="iat_language_preference"
        android:title="Language settings"
        android:entries="@array/language_entries"
        android:entryValues="@array/language_values"
        android:summary="Support: Mandarin, Cantonese, English"
        android:defaultValue="mandarin"  />
    
    <EditTextPreference
        android:key="iat_vadbos_preference"   
		android:title="Front end-point exceed time limit"
		android:dialogTitle="Please input time (0-10000)ms"
        android:summary="Default: SMS transcript 5000, others 4000"
		android:defaultValue="5000" />
    
    <EditTextPreference
        android:key="iat_vadeos_preference"   
		android:title="Back end-point exceed time limit"
		android:dialogTitle="Please input time (0-10000)ms"
        android:summary="Default: SMS transcript 1800, others 700"
		android:defaultValue="1800" />

    <ListPreference
        android:key="iat_punc_preference"
        android:title="Punctuations"
        android:entries="@array/punc_entries"
        android:entryValues="@array/punc_values"
        android:summary="Default: have punctuations"
        android:defaultValue="1"  />
    
	<CheckBoxPreference
		android:key="@string/pref_key_iat_show"
		android:title="@string/pref_title_iat_show"
		android:defaultValue="true" />

</PreferenceScreen>

